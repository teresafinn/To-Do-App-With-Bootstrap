<p id="notice"><%= notice %></p>

<h1>Things To Do:</h1>

<table class="table table-hover">
  <thead>
    <tr class="info">
      <th>Title</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.notes %></td>
        <td><%= link_to todo, class: 'btn btn-default' do %>
        <i class='glyphicon glyphicon-eye-open'></i> View
        <% end %></td>
        <td><%= link_to edit_todo_path(todo), class: 'btn btn-default' do %>
        <i class='glyphicon glyphicon-pencil'></i> Edit
        <% end %></td>
        <td><%= link_to todo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' do %>
          <i class='glyphicon glyphicon-trash'></i> Delete
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_todo_path, class: 'btn btn-primary btn-lg' do %>
  <i class='glyphicon glyphicon-plus'></i>' New To Do
<% end %>