<p id="notice"><%= notice %></p>

<h1>Things To Do:</h1>

<table class="table table-hover">
  <thead>
    <tr class="info">
      <th>Title</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.notes %></td>
        <td><%= link_to 'Show', todo, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo), class: 'btn btn-default'  %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path, class: 'btn btn-primary' %>
